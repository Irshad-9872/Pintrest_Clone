<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
  <form id="uploadForm" hidden action="/fileUpload" method="post" enctype="multipart/form-data">
    <input type="file" name="image">
  </form>
  <div class="profdets flex flex-col items-center mt-20">
    <div class="relative" >
        <span id="uploadIcon" class="w-7 h-7 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-300">
            <i  class="text-zinc-800 ri-pencil-fill"></i>
        </span>
      <div class="w-28 h-28 bg-zinc-200 rounded-full overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user.profileImage %>"
          alt=""
        />
      </div>
    </div>

    <h1 class="text-2xl font-semibold text-white mt-1"><%= user.name %></h1>
    <h3 class="text-md text-[10px]">@<%=user.username %></h3>
    <a
      href="/edit"
      class="px-4 py-1 bg-zinc-700 rounded-full text-[10px] font-semibold mt-1"
      >Edit</a
    >
    <a
     href="/add" class="px-3 py-1 rounded-lg bg-red-700 mt-2 text-[8px] font-semibold"
    >
      Add New Post
    </a>
  </div>
  <div class="cards flex flex-wrap gap-10 px-10 mt-7">
    <div class="card">

      <div class="w-32 h-20 bg-zinc-200 rounded-md overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="/images/uploads/<%= user?.posts[0]?.image %>"
          alt=""
        />
      </div>
      <a href="/show/posts" class="inline-block text-l font-semibold mt-1">Your Uploaded pins</a>
      <h5 class="text-xs font-medium opacity-60"><%= user.posts.length %>Pins</h5>
    </div>
  </div>
</div>

<script>

  document.querySelector("#uploadIcon").addEventListener("click", function(){
 document.querySelector("#uploadForm input").click();
  })

  document.querySelector("#uploadForm input").addEventListener("change", function(){
    document.querySelector("#uploadForm").submit();
  })
</script>

