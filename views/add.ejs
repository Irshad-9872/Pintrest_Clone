<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-8 py-5 text-white">
    <h1 class="text-l">Create new post</h1>
<hr class="opacity-10 mt-1">
   <form action="/createPost" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-0.3  rounded-md mt-1"  type="file" name="postImage" >
    <input class="block w-1/3 px-3 py-0.5  rounded-md mt-1 text-zinc-900"  type="text" placeholder="Title" name="title">
    <textarea class="block w-1/3 px-3 py-0.5 h-30 rounded-md mt-1 text-zinc-900" type="text" placeholder="Description" name="description"></textarea>
    <input class="block w-1/3 px-3 py-0.5  rounded-md mt-1 bg-green-600" type="submit" value="Create post">
   </form>

</div>

<% include ./partials/footer.ejs %>